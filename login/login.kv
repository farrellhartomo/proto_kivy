#: import MDNavigationLayout kivymd.uix.navigationdrawer.MDNavigationLayout
#: import md_icons kivymd.icon_definitions.md_icons

<RoundLogo@Widget>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            # source: '../f.png'
            source: 'f.png'

<LoginPage>:
    id:login_page
    name: 'login_page'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "bg.png"
            # source: "../bg.png"

    RelativeLayout:
        pos: self.parent.pos
        size: self.parent.size
        RoundLogo:
            size_hint: None,None
            pos_hint: {'center_x': .5, 'center_y': .8}
        MDLabel:
            text: "[font=Roboto-Bold] CITYROUND [/font]" 
            markup: True
            height: self.texture_size[1]
            font_size: "20sp"
            halign: 'center'
            size_hint: None,None
            pos_hint: {'center_x': .5, 'center_y': .7}
            size: 400,200
        
        MDLabel:
            text: "Travel Around the World" 
            font_style: "Caption"
            height: self.texture_size[1]
            font_size: "15sp"
            halign: 'center'
            size_hint: None,None
            pos_hint: {'center_x': .5, 'center_y': .65}
            size: 400,200

        MDTextField:
            mode: "fill"
            fill_color: 1,1,1,.3
            color_mode: 'accent'
            id: usr_txt
            pos_hint: {'center_x': .5, 'center_y': 0.5}
            hint_text: 'Your Username'
            size_hint_x: None
            width: 500
            on_text_validate: usr_pwd.focus=True
            canvas.before:
                Color:
                    rgba: 1,1,1,1

        MDTextField:
            id: usr_pwd
            mode: "fill"
            fill_color: 1,1,1,.3
            color_mode: 'accent'
            pos_hint: {'center_x': .5, 'center_y': 0.39}
            hint_text: 'Your Password'
            password: True
            size_hint_x: None
            width: 500
            on_text_validate: root.verifyLogin()
            canvas.before:
                Color:
                    rgba: 1,1,1,1

        Button:
            id: login_btn
            text: "Sign In"
            font_size: '12sp'
            pos_hint: {"center_x": .5, "center_y": .3}
            size_hint: None, None
            width: 500
            on_release: root.verifyLogin()
            background_color: 'teal'


        MDLabel:
            id: info_txt
            size_hint: None,None
            pos_hint: {"center_x": .5, "center_y": 0.2}
            markup: True
            halign:'center'
            font_size: "9sp"
            width: 400
            bold: True
            underline: True
                    